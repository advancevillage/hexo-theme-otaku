html, body {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  overflow: hidden; 
}

a {
  text-decoration: none;
}

.sky-gradient {
  position: relative;
  float: left;
  width: 100%;
  height: 100%;
  transition: box-shadow 150ms, z-index 0ms;
  background: linear-gradient(to bottom, #1e528e 0%, #265889 50%, #9da671 100%);
}

.sun{
  width: 5em;
  height: 5em;
  border-radius: 50%;
  box-shadow: 0px 0px 100px #FFFF00;
  background: radial-gradient(circle at center, red, gold);
}
